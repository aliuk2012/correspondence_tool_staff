<% if defined?(linked_case_errors) && linked_case_errors.present? %>
  // Display error messages
  $('#js-search-for-case')
    .addClass('form-group-error')
    .find('.error-message')
    .html("<%= j linked_case_errors %>")

   moj.Modules.CaseCreation.insertOriginalCaseReport('');
<% else %>
    // inject the content into the page
  <% content = j render partial: 'cases/ico/case_linking/linked_original_case' , locals: { original_case: original_case, linked_case_errors:linked_case_errors }%>

  //clear any previous errors
  $('#js-search-for-case')
  .removeClass('form-group-error')
  .find('.error-message')
  .html("<%= j linked_case_errors %>")

  // inject the content into the page
  moj.Modules.CaseCreation.insertOriginalCaseReport("<%= content %>")
<% end %>

